# set the verbosity of the run
/control/verbose 1
/run/verbose 1
/event/verbose 0

# set the thickness of the absorber
/det/setAbsorberDepth 2 mm
/det/setAbsorberMaterial Perspex

# set the radius of the collimator/beamspot
/det/setCollimatorInnerRadius 5 mm

# set the dynamite sensor flag
#/det/setDynamiteConstruction true

/det/setTrackerConstruction true

# update the geometry
/det/update  

# define histogram names
/histo/setFileName proton-29.4MeV_spread0.3MeV_abs-20mmPerspex_bs-pencil
/histo/setFileType root

#set the particle properties
/gps/particle proton
/gps/direction 0 0 1
/gps/position 0.0 0.0 -30.0 cm
/gps/energy 50.0 MeV
/gps/ene/type Gauss
/gps/ene/sigma 0.0 MeV
/gps/pos/shape Circle
/gps/pos/radius 10 mm


/geometry/test/cylinder_test true

# finally run the beam
/run/beamOn 1000

