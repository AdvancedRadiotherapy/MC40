# set the verbosity of the run
/control/verbose                                     1
/run/verbose                                         1
/event/verbose                                       0

# set up the geometry of the beamline
# set up the geometry of the beamline
/det/setCollimatorInnerRadius                        25 mm
/det/setAbsorberDepth                                20 mm
/det/setAbsorberMaterial                             G4_PLEXIGLASS
/det/setScatteringMaterial G4_Ta
/det/setScatteringInsideVacuum true
/det/setFirstScattererThickness 80 um
#/det/setFirstScattererSize 0.0 20.0 0.05 mm
/det/setFirstScattererPosition 0.0 0.0 -3000 mm
/det/setGaFChromicFilmType None #(default: None)
/det/setGaFChromicFilmSize 10.0 10.0 0.0 cm
/det/setGaFChromicFilmPosition 0.0 0.0 300 mm
/det/update  

# set the physics to be used
/phys/addPhysics                                     QGSP_BIC_EMY
/phys/setWorldCuts                                   0.7 mm
/histo/setFileName                                   scattered_Ta80microns_3000mm_extraHistograms
/histo/setFileType                                   root

#set the particle properties
/gps/particle                                        proton
/gps/pos/type                                        Beam
/gps/pos/shape                                       Circle
/gps/pos/centre                                      0.0 0.0 -400.0 cm
/gps/pos/radius                                      5 mm
/gps/direction                                       0 0 1

/gps/energy                                          36.0 MeV
/gps/ene/type                                        Gauss
/gps/ene/sigma                                       0.15 MeV

/gps/pos/radius                                      5.0 mm
/gps/pos/sigma_r                                     0.1 mm

/gps/ang/type                                        beam2d
/gps/ang/sigma_x                                     1.4 mrad
/gps/ang/sigma_y                                     1.4 mrad
/gps/ang/rot1                                        -1. 0. 0.

# finally run the beam
/run/initialize
/run/beamOn                                          500000

